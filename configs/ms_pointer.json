{
    "random_seed": 1,
    "numpy_seed": 1,
    "pytorch_seed": 1,
    "train_data_path": "./data/train_v0.tsv",
    "validation_data_path": "./data/valid_v0.tsv",
    "test_data_path": "./data/test_v0.tsv",
    "dataset_reader": {
        "type": "ms"
    },
    "model": {
        "type": "ms_pointer_network",
        "source_embedder_1": {
            "type": "basic",
            "token_embedders": {
                "tokens":{
                    "type": "embedding",
                    "embedding_dim": 128                   
                }
            }
        },
        "source_encoder_1": {
            "type": "lstm",
            "input_size": 128,
            "hidden_size": 128,
            "bidirectional": true
        },
        "beam_size": 5,
        "max_decoding_steps": 20,
        "decoder_output_dim": 256
    },
    "iterator": {
        "batch_size": 32
    },
    "trainer": {
        "num_epochs": 1,
        "optimizer": {
            "type": "adam",
            "lr": 0.001
        },
        "patience": 5,
        "cuda_device": -1,
        "grad_clipping": 5.0,
        "validation_metric": "+BLEU"
    }
}